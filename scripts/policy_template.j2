{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowUploadOwnFiles",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::inspector/uploads/{{ user_id }}/*"
      ]
    },
    {
      "Sid": "AllowReadOwnReports",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::inspector/reports/{{ user_id }}/*"
      ]
    }
  ]
}
